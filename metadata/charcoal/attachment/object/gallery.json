{
    "defaultData": {
        "type": "charcoal/attachment/object/gallery",
        "preview": "{{> charcoal/attachment/object/gallery }}",
        "heading": "{{# _t }}Gallery{{/ _t }}{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}"
    },

    "data": {
        "type": "charcoal/attachment/object/gallery",
        "preview": "{{> charcoal/attachment/object/gallery }}",
        "heading": "{{# _t }}Gallery{{/ _t }}{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}"
    },

    "attachments": {
        "defaultWidget": "images",
        "attachableObjects": {
            "charcoal/attachment/object/image": {
                "label": "Image"
            }
        }
    },

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "title",
                    "active"
                ],
                "listActions": [
                    {
                        "label": "New Gallery",
                        "ident": "create",
                        "url": "object/edit?obj_type=charcoal/attachment/object/gallery"
                    }
                ],
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/gallery"
                    }
                }
            },
            "attachment": {
                "properties": [
                    "title"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                },
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/gallery"
                    }
                }
            }
        },

        "defaultList": "default",

        "forms": {
            "quick": {
                "groups": {
                    "main": {
                        "title": {
                            "fr": "Galerie",
                            "en": "Gallery"
                        },
                        "properties": [
                            "title"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    }
                }
            }
        },

        "defaultForm": "quick",

        "dashboards": {
            "edit": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "quick",
                        "objType": "charcoal/attachment/object/gallery"
                    },
                    "images": {
                        "title": "Images",
                        "type": "charcoal/admin/widget/attachment",
                        "formIdent": "default",
                        "group": "gallery",
                        "attachableObjects": {
                            "charcoal/attachment/object/image": {
                                "label": "Image"
                            }
                        }
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] },
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "table": {
                "title": "List of Galleries",
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "default",
                        "objType": "charcoal/attachment/object/gallery"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        }
    }
}
