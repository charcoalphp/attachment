{
    "defaultData": {
        "type": "charcoal/attachment/object/embed",
        "preview": "{{> charcoal/attachment/object/embed }}",
        "heading": "{{# _t }}Embedded Media{{/ _t }}{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}"
    },

    "data": {
        "type": "charcoal/attachment/object/embed",
        "preview": "{{> charcoal/attachment/object/embed }}",
        "heading": "{{# _t }}Embedded Media{{/ _t }}{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}"
    },

    "properties": {
        "file": {
            "type": "image",
            "uploadPath": "uploads/attachments/images/",
            "viewOptions": {
                "charcoal/admin/property/display/image": {
                    "height": 50
                }
            }
        },
        "description": {
            "type": "html"
        }
    },

    "admin": {
        "forms": {
            "embed": {
                "l10nMode": "loopInputs",
                "groups": {
                    "info": {
                        "title": "Information",
                        "properties": [
                            "title",
                            "subtitle",
                            "embed",
                            "description",
                            "keywords"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    },
                    "taxo": {
                        "properties": [
                            "active"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] }
                            ]
                        }
                    }
                },
                "sidebars": {
                    "default": {}
                }
            },
            "quick": {
                "groups": {
                    "main": {
                        "properties": [
                            "title",
                            "embed"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    }
                }
            }
        },

        "defaultForm": "embed",

        "lists": {
            "default": {
                "properties": [
                    "title",
                    "file",
                    "active"
                ],
                "listActions": [
                    {
                        "label": "New Embedded Media",
                        "ident": "create",
                        "url": "object/edit?obj_type=charcoal/attachment/object/embed"
                    }
                ],
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/embed"
                    }
                }
            },
            "attachment": {
                "properties": [
                    "title",
                    "embed"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                },
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/embed"
                    }
                }
            }
        },

        "defaultList": "default",

        "dashboards": {
            "edit": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "embed",
                        "objType": "charcoal/attachment/object/embed"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "table": {
                "title": "List of Embedded Media",
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "default",
                        "objType": "charcoal/attachment/object/embed"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        }
    }
}
