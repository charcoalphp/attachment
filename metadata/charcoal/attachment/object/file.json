{
    "defaultData": {
        "type": "charcoal/attachment/object/file",
        "preview": "{{> charcoal/attachment/object/file }}",
        "heading": "{{# _t }}File{{/ _t }}{{# title }}: {{ . }} — {{/ title }}{{^ title }} #{{ id }} — {{/ title }}{{ basename }}"
    },

    "data": {
        "type": "charcoal/attachment/object/file",
        "preview": "{{> charcoal/attachment/object/file }}",
        "heading": "{{# _t }}File{{/ _t }}{{# title }}: {{ . }} — {{/ title }}{{^ title }} #{{ id }} — {{/ title }}{{ basename }}"
    },

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "title",
                    "subtitle",
                    "file",
                    "active"
                ],
                "listActions": [
                    {
                        "label": "New File",
                        "ident": "create",
                        "url": "object/edit?obj_type=charcoal/attachment/object/file"
                    }
                ],
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/file"
                    }
                }
            },
            "attachment": {
                "properties": [
                    "title",
                    "file"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                },
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/file"
                    }
                }
            }
        },

        "defaultList": "default",

        "forms": {
            "quick": {
                "groups": {
                    "main": {
                        "properties": [
                            "title",
                            "file"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    }
                }
            }
        },

        "dashboards": {
            "edit": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "default",
                        "objType": "charcoal/attachment/object/file"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "table": {
                "title": "List of Files",
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "default",
                        "objType": "charcoal/attachment/object/file"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        }
    }
}
