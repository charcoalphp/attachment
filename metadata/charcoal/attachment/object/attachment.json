{
    "defaultData": {
        "showTitle": true,
        "preview": "{{ title }}",
        "heading": "{{# _t }}Related Content{{/ _t }}{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}"
    },

    "data": {
        "showTitle": true,
        "preview": "{{ title }}",
        "heading": "{{# _t }}Related Content{{/ _t }}{{# title }}: {{ . }}{{/ title }}{{^ title }} #{{ id }}{{/ title }}"
    },

    "properties": {
        "id": {
            "type": "id",
            "mode": "uniqid",
            "label": "ID"
        },
        "title": {
            "type": "string",
            "l10n": true,
            "label": "Title"
        },
        "showTitle": {
            "type": "boolean",
            "label": "Show title on the website"
        },
        "categories": {
            "type": "object",
            "objType": "charcoal/attachment/object/category/generic",
            "multiple": true,
            "label": "Categories"
        },
        "subtitle": {
            "type": "string",
            "l10n": true,
            "label": "Sub-Title"
        },
        "description": {
            "type": "text",
            "l10n": true,
            "label": "Description"
        },
        "keywords": {
            "type": "string",
            "multiple": true,
            "l10n": true,
            "label": "Keywords"
        },
        "type": {
            "type": "string",
            "label": "Type"
        },
        "link": {
            "type": "string",
            "l10n": true,
            "label": "URL",
            "notes": "e.g.: <samp>https://locomotive.ca</samp>"
        },
        "linkLabel": {
            "type": "string",
            "l10n": true,
            "label": "URL Label"
        },
        "file": {
            "type": "file",
            "l10n": true,
            "label": "File",
            "uploadPath": "uploads/attachments/",
            "publicAccess": true
        },
        "fileLabel": {
            "type": "string",
            "l10n": true,
            "label": "File Label"
        },
        "fileSize": {
            "type": "string",
            "label": "File Size"
        },
        "fileType": {
            "type": "string",
            "label": "File Type"
        },
        "thumbnail": {
            "type": "image",
            "l10n": true,
            "label": "File's Thumbnail",
            "uploadPath": "uploads/attachments/thumbs/",
            "publicAccess": true
        },
        "embed": {
            "type": "text",
            "l10n": true,
            "label": "Embed Video",
            "notes": "As provided by YouTube or Vimeo",
            "allowHtml" : true
        }
    },

    "sources": {
        "default": {
            "type": "database",
            "table": "charcoal_attachments"
        }
    },

    "defaultSource": "default",

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "title",
                    "subtitle",
                    "type",
                    "file"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                }
            }
        },

        "defaultList": "default",

        "forms": {
            "default": {
                "l10nMode": "loopInputs",
                "groups": {
                    "info": {
                        "priority": 100,
                        "title": "Information",
                        "properties": [
                            "title",
                            "subtitle",
                            "description",
                            "keywords"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1, 1 ] }
                            ]
                        }
                    },
                    "media": {
                        "priority": 200,
                        "title": "Media",
                        "properties": [
                            "file",
                            "thumbnail"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1, 1 ] }
                            ]
                        }
                    },
                    "taxo": {
                        "priority": 300,
                        "title": "Taxonomy",
                        "properties": [
                            "active"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] }
                            ]
                        }
                    }

                },
                "sidebars": {
                    "default": {}
                }
            }
        },

        "defaultForm": "default",

        "dashboards": {
            "edit": {
                "title": "Edit Attachment",
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "default",
                        "groupDisplayMode": "tab"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "table": {
                "title": "List of Attachments",
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "default"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        },

        "defaultCreateDashboard": "edit",
        "defaultEditDashboard": "edit",
        "defaultCollectionDashboard": "table"
    }
}
