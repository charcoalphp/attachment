{
    "defaultData": {
        "type": "charcoal/attachment/object/link",
        "preview": "{{> charcoal/attachment/object/link }}",
        "heading": "{{# _t }}External Link{{/ _t }}{{# title }}: {{ . }} — {{/ title }}{{^ title }} #{{ id }} — {{/ title }}{{ link }}"
    },

    "admin": {
        "forms": {
            "link": {
                "l10nMode": "loopInputs",
                "groups": {
                    "info": {
                        "title": "Information",
                        "properties": [
                            "title",
                            "link"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    },
                    "taxo": {
                        "properties": [
                            "active"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] }
                            ]
                        }
                    }

                },
                "sidebars": {
                    "default": {}
                }
            },
            "quick": {
                "groups": {
                    "main": {
                        "properties": [
                            "title",
                            "link"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    }
                }
            }
        },

        "defaultForm": "link",

        "lists": {
            "link": {
                "properties": [
                    "title",
                    "subtitle",
                    "active"
                ],
                "listActions": [
                    {
                        "label": "New Link",
                        "ident": "create",
                        "url": "object/edit?obj_type=charcoal/attachment/object/link"
                    }
                ],
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/link"
                    }
                }
            },
            "attachment": {
                "properties": [
                    "title",
                    "subtitle"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                },
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/link"
                    }
                }
            }
        },

        "defaultList": "link",

        "dashboards": {
            "edit": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "link",
                        "objType": "charcoal/attachment/object/link"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "table": {
                "title": "List of Links",
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "link",
                        "objType": "charcoal/attachment/object/link"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        }
    }
}
