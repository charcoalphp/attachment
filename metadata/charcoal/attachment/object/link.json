            "en": "{{ title }}{{^ title }}External Link: #{{ id }}{{/ title }}{{# link }} — {{> charcoal/attachment/heading/link }}{{/ link }}"
        }
    },

    "labels": {
        "name": {
            "en": "Hyperlinks",
            "fr": "Hyperliens"
        },
        "singular_name": {
            "en": "Hyperlink",
            "fr": "Hyperlien"
        },
        "add_new": {
            "en": "Hyperlink",
            "fr": "Hyperlien"
