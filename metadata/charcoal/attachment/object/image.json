{
    "defaultData": {
        "type": "charcoal/attachment/object/image",
        "preview": "{{> charcoal/attachment/object/image }}",
        "heading": "{{# _t }}Picture{{/ _t }}{{# title }}: {{ . }} — {{/ title }}{{^ title }} #{{ id }} — {{/ title }}{{ basename }}"
    },

    "properties": {
        "description": {
            "type": "html"
        },
        "file": {
            "type": "image",
            "uploadPath": "uploads/attachments/images/",
            "viewOptions": {
                "charcoal/admin/property/display/image": {
                    "height": 50
                }
            }
        }
    },

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "title",
                    "file",
                    "active"
                ],
                "listActions": [
                    {
                        "label": "New Image",
                        "ident": "create",
                        "url": "object/edit?obj_type=charcoal/attachment/object/image"
                    }
                ],
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/image"
                    }
                }
            },
            "attachment": {
                "properties": [
                    "title",
                    "file"
                ],
                "orders": {
                    "type": {
                        "property": "type",
                        "val": "asc"
                    }
                },
                "filters": {
                    "type": {
                        "property": "type",
                        "val": "charcoal/attachment/object/image"
                    }
                }
            }
        },

        "forms": {
            "quick": {
                "groups": {
                    "main": {
                        "properties": [
                            "title",
                            "subtitle",
                            "description",
                            "file"
                        ],
                        "layout": {
                            "structure": [
                                { "columns": [ 1, 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] },
                                { "columns": [ 1 ] }
                            ]
                        }
                    }
                }
            }
        },

        "defaultList": "default",

        "dashboards": {
            "edit": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "default",
                        "objType": "charcoal/attachment/object/image"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            },
            "table": {
                "title": "List of Images",
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "default",
                        "objType": "charcoal/attachment/object/image"
                    }
                },
                "layout": {
                    "structure": [
                        { "columns": [ 1 ] }
                    ]
                }
            }
        }
    }
}
